{
  "permissions": {
    "allow": [
      "Bash(git fetch:*)",
      "Bash(.specify/scripts/bash/create-new-feature.sh:*)",
      "Bash(.specify/scripts/bash/check-prerequisites.sh:*)",
      "Bash(.specify/scripts/bash/setup-plan.sh:*)",
      "mcp__terraform__list_terraform_orgs",
      "mcp__terraform__search_private_modules",
      "mcp__terraform__list_terraform_projects",
      "mcp__terraform__get_private_module_details",
      "Bash(then echo \"EXISTS\")",
      "Bash(else echo \"NOT_FOUND\")",
      "Bash(fi)",
      "Bash(git rev-parse:*)",
      "Bash(if [ -f /workspace/.gitignore ])",
      "Bash(if [ -f /workspace/.pre-commit-config.yaml ])",
      "Bash(pre-commit install:*)",
      "Bash(terraform fmt:*)",
      "Bash(pre-commit run:*)",
      "Bash(git add:*)",
      "Bash(terraform init:*)",
      "Bash(git commit:*)",
      "Bash(ls:*)",
      "mcp__terraform__create_workspace",
      "mcp__terraform__create_workspace_variable",
      "mcp__terraform__create_run",
      "mcp__terraform__get_workspace_details",
      "Bash(terraform plan:*)",
      "Bash(terraform apply:*)",
      "Bash(.specify/scripts/bash/update-agent-context.sh:*)",
      "SlashCommand(/speckit.specify)",
      "SlashCommand(/speckit.plan)",
      "SlashCommand(/speckit.tasks)",
      "SlashCommand(/speckit.analyze)",
      "SlashCommand(/speckit.checklist)",
      "SlashCommand(/speckit.implement)",
      "Bash(cat:*)",
      "Bash(env)",
      "Bash(git log:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "terraform",
    "aws-knowledge-mcp-server"
  ]
}
