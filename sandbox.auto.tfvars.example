# Example Terraform Variables for Sandbox Testing
# Copy this file to sandbox.auto.tfvars and populate with actual values

# ==============================================================================
# REQUIRED VARIABLES
# ==============================================================================

# Deployment environment (development, staging, or production)
environment = "development"

# ==============================================================================
# OPTIONAL VARIABLES (uncomment and modify as needed)
# ==============================================================================

# Project name for resource naming and tagging
# project_name = "ec2-alb-nginx"

# AWS region for resource deployment
# aws_region = "ap-southeast-2"

# EC2 instance type for web servers
# instance_type = "t3.micro"

# ARN of ACM certificate for HTTPS (if not provided, will auto-discover)
# certificate_arn = "arn:aws:acm:ap-southeast-2:123456789012:certificate/12345678-1234-1234-1234-123456789012"

# Health check configuration
# health_check_path = "/"
# health_check_interval = 30

# Additional custom tags
# common_tags = {
#   CostCenter = "Engineering"
#   Owner      = "Platform Team"
# }
