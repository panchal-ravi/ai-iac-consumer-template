{
  "mcpServers": {
    "terraform-mcp-server": {
      "type": "local",
      "command": "docker",
      "tools": [
        "*"
      ],
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "TFE_TOKEN",
        "hashicorp/terraform-mcp-server:0.3.2"
      ],
      "env": {
        "TFE_TOKEN": "${TFE_TOKEN}"
      }
    }
  }
}